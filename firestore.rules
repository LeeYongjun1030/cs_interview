rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Users Collection (Credits, Daily Bonus)
    // Only the user themselves can read or write their own document.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Initial creation: Must start with 3 credits
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.credits == 3;

      // Update: Prevent massive credit hacks (e.g., +1000)
      // Allow update only if: 
      // 1. Credits are decreasing (spending) OR
      // 2. Credits are increasing by at most 5 (Ad reward max) AND Total is <= 50
      // 3. Credits are unchanged (updating other fields)
      allow update: if request.auth != null && request.auth.uid == userId
                    && (
                      request.resource.data.credits <= resource.data.credits // Spending
                      || (request.resource.data.credits <= resource.data.credits + 5 && request.resource.data.credits <= 50) // Earning (Max 5 increase, Max 50 total)
                    );
      
      // Allow delete (Account Deletion)
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Sessions Collection (Interview Records)
    // Only the owner can Create, Read, Update, Delete.
    match /sessions/{sessionId} {
      // Allow create if user is authenticated and sets 'userId' to their own UID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow read/update/delete only if the existing document belongs to the user
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 3. Questions Collection (Question Bank)
    // Read-only for all authenticated users. Writes are blocked (Admin only via Console).
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Default Deny
    // Block access to any other unexpected collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
