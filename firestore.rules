rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Users Collection (Credits, Daily Bonus)
    // Only the user themselves can read or write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Sessions Collection (Interview Records)
    // Only the owner can Create, Read, Update, Delete.
    match /sessions/{sessionId} {
      // Allow create if user is authenticated and sets 'userId' to their own UID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow read/update/delete only if the existing document belongs to the user
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 3. Questions Collection (Question Bank)
    // Read-only for all authenticated users. Writes are blocked (Admin only via Console).
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Default Deny
    // Block access to any other unexpected collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
